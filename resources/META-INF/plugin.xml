<idea-plugin>
	<id>jubair.cloneTracker</id>
	<name>Jubair Clone Tracker Plugin</name>
	<version>1.1</version>
	<vendor email="jubair0614@gmail.com" url="http://www.iit.du.ac.bd">IIT</vendor>

	<description><![CDATA[
      This is a tool to track inconsistency within clone group<br>
      <em>Clone Tracker</em>
    ]]></description>

	<change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
	</change-notes>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
	<idea-version since-build="145.0"/>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<!-- uncomment to enable plugin in all products
	<depends>com.intellij.modules.lang</depends>
	-->

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
		<!-- Declare the project level service -->
		<applicationService serviceInterface="services.ProjectCounter" serviceImplementation="services.ProjectCounter"></applicationService>
		<applicationService serviceInterface="services.ProjectInstance" serviceImplementation="services.ProjectInstance"></applicationService>
	</extensions>

	<actions>
		<!-- Add your actions here -->

		<!-- This action detect clones in the whole repository -->
		<action id="Plugin.actions.CloneDetectionAction"
				class="actions.CloneDetectionAction"
				text="Detect Clone"
				description="clone detection in the whole repository">
			<add-to-group group-id="BuildMenu" relative-to-action="Compile" anchor="after"/>
			<keyboard-shortcut first-keystroke="control alt p" second-keystroke="C" keymap="$default"/>
			<mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>
		</action>

		<!-- This action extract current fragment from the caret position -->
		<action id="CaretPosition.FragmentExtractor"
				class="actions.CaretPositionFragment"
				text="Show Clones"
				description="Get all clones of selected Fragment">
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
		</action>



		<action id="EditorBasics.EditorIllustration"
				class="tryPackage.EditorIllustration"
				text="Editor Basics"
				description="Illustrates how to plug an action in">
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
		</action>
		<action id="EditorBasics.EditorHandlerIllustration"
				class="tryPackage.EditorHandlerIllustration"
				text="Editor Handler"
				description="Illustrates how to plug an action in">
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
		</action>


		<group id="Plugin.CloneTrack" text="CloneTrack" description="Custom Menu for SPL3">
			<add-to-group group-id="MainMenu" anchor="last"  />

			<action id="Plugin.actions.CloneDetectionAction" class="actions.CloneDetectionAction" text="Detect utilites.CloneFragment" description="clone detection using tool">

				<keyboard-shortcut first-keystroke="control alt p" second-keystroke="C" keymap="$default"/>

				<mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>

			</action>

			<action id="Plugin.CloneTracking" class="CloneTracking" text="Track clone" description="utilites.CloneFragment tracking" />

			<action id="MethodFragment" class="MethodFragment" text="MethodFragment" description="Method Fragment Extraction" />
		</group>

		<action id="InconsistentHint" class="actions.InconsistentHinter" text="Find Inconsistency"
				description="Select a cloned method and find inconsistency">
			<add-to-group group-id="EditorActions" anchor="first"/>
		</action>

		<action id="SelectedFragment" class="actions.SelectedFragment" text="Select Fragment"
				description="a method fragment is selected for searching its clone instances">
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
			<keyboard-shortcut keymap="$default" first-keystroke="ctrl S F"/>
		</action>

	</actions>


	<project-components>
		<component>
			<implementation-class>services.MaxProject</implementation-class>
		</component>
		<component>
			<implementation-class>services.CurrentProject</implementation-class>
		</component>
	</project-components>
</idea-plugin>
